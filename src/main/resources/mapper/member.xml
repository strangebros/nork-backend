<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="site.strangebros.nork.domain.member.mapper.MemberMapper">

    <!-- 회원가입 -->
    <insert id="signUp" parameterType="member">
        insert into member
            (email, password, nickname, birthdate, position, role)
        values
            (#{email}, #{password}, #{nickname}, #{birthdate}, #{position}, "member")
    </insert>

    <!-- 로그인 -->
    <select id="findByEmail" parameterType="string" resultType="member">
        select id, email, password
        from member
        where email=#{email}
    </select>

    <!-- 닉네임으로 조회  -->
    <select id="findByNickname" parameterType="string" resultType="member">
        select id, email, password
        from member
        where nickname=#{nickname}
    </select>

